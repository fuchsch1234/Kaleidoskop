{
  "scenarioName": "Upload a file with attached tags and retrieve it",
  "steps": [
    {
      "name": "upload_a_file",
      "url": "/images",
      "operation": "POST",
      "request": {
        "headers": { "Content-Type":  "multipart/form-data" },
        "body": {
          "files": ["file:integrationtest/files/test2.txt"],
          "boundary": "--1122-boundary--"
        }
      },
      "assertions": {
        "status": 201,
        "headers": { "Location": ["$CONTAINS.STRING:images"]}
      }
    },
    {
      "name": "get_image",
      "url": "${$.upload_a_file.response.headers.Location[0]}",
      "operation": "GET",
      "request": { "headers":  {} },
      "assertions": {
        "status": 200,
        "body": {
          "name": "test2.txt",
          "tags.SIZE": 0
        }
      }
    },
    {
      "name": "add_tags",
      "url": "${$.upload_a_file.response.headers.Location[0]}",
      "operation": "PATCH",
      "request": {
        "headers": {},
        "body": {
          "tags": [{"id": 0, "name": "first tag"}, {"id": 0, "name":  "second tag"}]
        }
      },
      "assertions": {
        "status": 200
      }
    },
    {
      "name": "get_image_with_tags",
      "url": "${$.upload_a_file.response.headers.Location[0]}",
      "operation": "GET",
      "request": { "headers":  {} },
      "assertions": {
        "status": 200,
        "body": {
          "name": "test2.txt",
          "tags.SIZE": 2
        }
      }
    },
    {
      "name": "delete_image",
      "url": "${$.upload_a_file.response.headers.Location[0]}",
      "operation": "DELETE",
      "request": { "headers":  {} },
      "assertions": {
        "status": 200
      }
    },
    {
      "name": "try_to_get_deleted_image",
      "url": "${$.upload_a_file.response.headers.Location[0]}",
      "operation": "GET",
      "request": { "headers":  {} },
      "assertions": {
        "status": 404
      }
    }
  ]
}